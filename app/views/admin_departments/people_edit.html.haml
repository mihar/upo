%h1 Urejanje osebe
%h2= "Spada v organ: ", @department.title

- form_tag( {:action => 'people_update', :id => @person}, {:multipart => true, :class => 'nice'} ) do
  = render :partial => 'people_form'
  - unless @person.image.nil?
    %p
      %label Obstoječa slika
      = image_tag url_for_file_column(@person, "image", "thumb")

  = nice_submit_tag


%p.admin_controls
  = link_to "Izbriši osebo", {:action => 'people_destroy', :id => @person}, :confirm => del_conf_msg(@person.full_name)
  |
  = link_to_back normal_link('departments')
