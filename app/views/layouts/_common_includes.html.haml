= javascript_include_tag :defaults, 'menus', :cache => true
- if @lightbox == true
  = javascript_include_tag 'lightbox'
  = stylesheet_link_tag 'lightbox'

- if @tinymce
  = javascript_include_tag 'tiny_mce/tiny_mce'
  %script{ :type => "text/javascript", :charset => "utf-8" }
    tinyMCE.init({
    mode : "textareas",
    theme : "simple",
    editor_selector : "gui",
    editor_deselector : "nogui"
    });

= stylesheet_link_tag( 'layout', :cache => true )
= stylesheet_link_tag('color_union' )
/[if lt IE 7]
  = stylesheet_link_tag 'layout_ie', :media => 'screen'