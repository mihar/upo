%h1 Urejanje organizacije

- @tinymce = true

- form_tag({:action => 'update'}, {:class => 'nice'}) do

  = error_messages_for 'organization'

  %p
    %label{ :for => "organization_organization" } Organizacija
    = text_area 'organization', 'organization', :class => 'gui'

  = nice_submit_tag


%h2 Priponke
= render :partial => 'admin_resource_attachment/attachment', :collection => @organization.resource_attachments


%p.admin_controls
  = link_to_back normal_link('organization')
  |
  = render :partial => 'admin_resource_attachment/add_attachment_links', :locals => {:segment => 'organization', :id => @organization.id}
